  "bugs": {
    "url": "https://github.com/totalimmersion/com.somfy.tahoma/issues"
  },
  "homepage": "https://github.com/totalimmersion/com.somfy.tahoma#readme",
  "dependencies": {
    "homey-log": "^1.0.6",
    "request": "^2.87.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "co-mocha": "^1.2.2",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^5.2.0",
    "mock-require": "^3.0.2",
    "nyc": "^13.1.0",
    "sinon": "^6.1.3",
    "sinon-chai": "^3.2.0"
  }
